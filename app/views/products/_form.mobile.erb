<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %>
      prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :artist %>
    <%= f.input :price, :hint => "Price in dollars (currently holds track position too)" %>
    <%= f.input :created_at, :as => :date %>
    <%= f.input :updated_at, :as => :date %>
    <%= f.button :submit %>
  </div>
<% end %>
