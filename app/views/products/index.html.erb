<h1>Listing products</h1>

<table class = "pretty">
      <tr>
    <th><%=  sortable  "image_url","Cover"%></th>
    <th><%=  sortable  "title","Album"%></th>
    <th><%=  sortable  "artist","Artist"%></th>
    <th><%=  sortable  "description","Tracks"%></th>
    <th><%=  sortable  "price","Price"%></th>
    </tr>
<% for product in @products %>
<tr>
    <td>
      <%= image_tag(product.image_url, :class=> 'list_image') %>
    </td>
    <td><%= product.title %></td>
    <td><%= product.artist %></td>
        <td><%= truncate(strip_tags(product.description),
               :length=> 8) %></td>
              <td>
      <span class="price"><%= number_to_currency(product.price) %></span>
    </td>

    <td class="list_actions">
      <br><%= link_to 'Show', product %><br/>
      <br><%= link_to 'Edit', edit_product_path(product) %><br/>
      <%= link_to 'Destroy', product, 
                  :confirm=> 'Are you sure?',
                  :method=> :delete %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to 'New product', new_product_path %>
