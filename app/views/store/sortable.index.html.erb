###/app/views/store/index.html.erb
<% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
  
  <h1><%= t('.title_html') %></h1>
  
  <table class = "pretty">
    <tr>
    <th><%=  sortable  "image_url","Cover"%></th>
    <th><%=  sortable  "title","Album"%></th>
    <th><%=  sortable  "artist","Artist"%></th>
    <th><%=  sortable  "description","Tracks"%></th>
    <th><%=  sortable  "price","Price"%></th>
  </tr>
  <% for product in @products %>
  <tr>
  <td class="entry"> 
    <%= image_tag(product.image_url) %> </td>
  <td><%= product.title %></td>
  <td><%= product.artist %></td>
  <td> <%= sanitize(product.description) %> </td>
  <td class="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span> 
      <%= button_to I18n.t('.add_html'), line_items_path(:product_id=> product),
      :remote => true %></td> 
  </tr>
  <% end %>
  </table>